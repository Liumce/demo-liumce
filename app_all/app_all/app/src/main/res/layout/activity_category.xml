<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="#F2F2F2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_category_menu1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu1"
                android:textColor="#979797"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_category_menu2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu2"
                android:textColor="#979797"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_category_menu3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu3"
                android:textColor="#979797"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_category_menu4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu4"
                android:textColor="#979797"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_category_menu5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu5"
                android:textColor="#979797"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_category_menu6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu6"
                android:textColor="#979797"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_category_menu7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/category_menu7"
                android:textColor="#979797"
                android:gravity="center"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_category_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/category_btn_channel"
                    android:background="@drawable/rect_black_btn"
                    android:textColor="#979797"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_category_new_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_btn_new_product"
                    android:textStyle="bold"
                    android:background="@drawable/rect_black_btn"
                    android:textColor="#979797"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/top_line"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="@string/category_tv_color"
                android:textColor="#979797"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv1"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv2"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv3"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv4"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv5"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv6"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv7"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv8"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv9"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv10"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv11"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv12"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv13"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv14"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv15"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="@string/category_color_tv16"
                        android:textColor="#B0C4DE"
                        android:gravity="center"
                        android:background="@drawable/rect_white_btn"
                        android:layout_marginLeft="3dp"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/top_line"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:text="@string/category_tv_size"
                android:textColor="#979797"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:id="@+id/tv_category_size1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_size_btn1"
                        android:background="@drawable/rect_back_selector"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_category_size2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_size_btn2"
                        android:background="@drawable/rect_white_btn"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_category_size3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_size_btn3"
                        android:background="@drawable/rect_white_btn"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/top_line"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:text="@string/category_tv_product"
                android:textColor="#979797"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:id="@+id/tv_category_product1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_product_btn1"
                        android:background="@drawable/rect_white_btn"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_category_product2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_product_btn2"
                        android:background="@drawable/rect_white_btn"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_category_product3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/category_product_btn3"
                        android:background="@drawable/rect_white_btn"
                        android:textColor="#B0C4DE"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>